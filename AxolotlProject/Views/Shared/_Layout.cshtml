<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://kit.fontawesome.com/e101ba82dd.js" crossorigin="anonymous"></script>
    <title>Axolotl Project</title>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>

</head>
<body>
<div id="page-container">
    <header class="header__container">
        <div class="header__inner">
            <span class="header__inner__left">
                    <a asp-controller="UserPost" asp-action="Index" id="logo">
                        <div class="inner">Axolotl`s Answers</div>
                    </a>
            </span>
            <span class="header__inner__right">
                <div class="inner"><i class="fa-solid fa-magnifying-glass"></i></div>
                <div class="inner"><partial name="_LoginPartial" /></div>
                <div class="inner"><i class="fa-regular fa-bell"></i></div>
                <div class="inner"><i class="fa-solid fa-bookmark"></i></div>
                <div class="inner"><partial name="_SettingsPartial"/></div>
                <partial name="_AdminPanelLinkPartial" />
            </span>
        </div>
    </header>

    <div class="main-content">
        @RenderBody()
    </div>

    <footer class="footer__container">
        <div class="footer__inner">
            <div>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam animi aspernatur autem consequatur dicta, eos
                error eum hic sapiente unde.</div>
                <div class="copy">&copy; <a style="color: white;" asp-controller="BusinessCard" asp-action="Index">4K-Dev</a>, Inc. All rights reserved.</div>
        </div>
    </footer>
</div>
<script src="https://kit.fontawesome.com/e101ba82dd.js" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
