@page
@model AxolotlProject.Areas.Identity.Pages.Account.Manage.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<link rel="stylesheet" href="~/css/settings.css" asp-append-version="true" />

<div>
    <div class="settings-body">
        <div class="main-frame">
            <div class="text-part">
                <div class="header-text">
                    SETTINGS
                </div>
                <div class="simple-text">
                    You can edit your personal information in four tabs: personal, privacy, design and safety. In according
                    to the chosen tab you can choose something to update and save modified data.
                </div>
            </div>
            <div class="tab-part">
                <div class="tabs">
                    <div class="tab">
                        <input type="radio" id="tab1" name="tab-group" checked>
                        <label for="tab1" class="tab-title">Personal</label>
                        <section class="tab-content">
                            <form method="post">
                                <input asp-for="Input.NewLogin" class="form-control" autocomplete="login" placeholder="Your login" aria-required="false" />
                                
                                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" type="password" placeholder="Your old password" aria-required="false" />
                                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" type="password" placeholder="Your new password" aria-required="false" />
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" type="password" placeholder="Repeat your new password" aria-required="false" />

                                <div class="buttons">
                                    <button class="button" type="submit">Update</button>
                                    <a class="button" href="/">Return</a>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="tab">
                        <input type="radio" id="tab2" name="tab-group">
                        <label for="tab2" class="tab-title">Privacy</label>
                        <section class="tab-content">In progress!</section>
                    </div>
                    <div class="tab">
                        <input type="radio" id="tab3" name="tab-group">
                        <label for="tab3" class="tab-title">Design</label>
                        <section class="tab-content">In progress!</section>
                    </div>
                    <div class="tab">
                        <input type="radio" id="tab4" name="tab-group">
                        <label for="tab4" class="tab-title">Safety</label>
                        <section class="tab-content">In progress!</section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>